{
  "name": "os-downloader",
  "version": "1.1.0",
  "description": "A library for detecting OS and triggering appropriate downloads",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "scripts": {
    "build:dev": "tsc --project tsconfig.dev.json",
    "build:prod": "tsc --project tsconfig.build.json",
    "clean": "rm -rf lib",
    "prepare": "bun run clean && bun run build:prod",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "prepublishOnly": "bun run test"
  },
  "devDependencies": {
    "@types/bun": "^1.1.8",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "typescript": "5.5.4"
  },
  "dependencies": {},
  "files": [
    "lib"
  ],
  "keywords": [
    "os",
    "downloader",
    "typescript",
    "npm-package",
    "cross-platform",
    "system-detection"
  ],
  "author": {
    "name": "ran"
  },
  "homepage": "https://github.com/duran-0519/os-downloader",
  "repository": {
    "type": "git",
    "url": "https://github.com/duran-0519/os-downloader.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
